@model TeacherViewModel


@{
    ViewBag.Title = "Details";
    var photoPath = "~/images/" + (Model.Teachers.PhotoPath ?? "noimage.png");
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h3 class="display-4">@Model.Teachers.TeacherName</h3>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />
                <h5 class="display-4">Teacher Name: @Model.Teachers.TeacherName</h5>
                <h6 class="display-4">Department : @Model.Teachers.TeacherDept</h6>
                <h6 class="display-4">Designation : @Model.Teachers.TeacherDesignation</h6>
                <h6 class="display-4">Qualification : @Model.Teachers.TeacherQualification</h6>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="Teachers" asp-action="Index" class="btn btn-primary">Back</a>
                <a class="btn btn-primary m-1" asp-action="Edit" asp-route-id="@Model.Teachers.TeacherId">Edit</a>
                <a class="btn btn-danger m-1" asp-action="Delete" asp-route-id="@Model.Teachers.TeacherId">Delete</a>


            </div>
        </div>
    </div>
</div>
