@model EditTeachersViewModel

@{
    ViewData["Title"] = "Edit";
    var photoPath = "~/images/" + (Model.ExistingPhotoPath ?? "noimage.png");
}

<h1>Edit</h1>

<h4>Teachers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-controller="Teachers" asp-action="Edit" method="post">
            <input hidden asp-for="Id" />
            <input hidden asp-for="ExistingPhotoPath" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeacherName" class="control-label"></label>
                <input asp-for="TeacherName" class="form-control" />
                <span asp-validation-for="TeacherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherDept" class="control-label"></label>
                <input asp-for="TeacherDept" class="form-control" />
                <span asp-validation-for="TeacherDept" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherDesignation" class="control-label"></label>
                <input asp-for="TeacherDesignation" class="form-control" />
                <span asp-validation-for="TeacherDesignation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherQualification" class="control-label"></label>
                <input asp-for="TeacherQualification" class="form-control" />
                <span asp-validation-for="TeacherQualification" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input  asp-for="Photo" class="form-control custom-file-input">
                        <label class="custom-file-label">Click Here To Change Photo.</label>
                    </div>
                </div>
            </div>
            <div class="form-group row col-sm-4 offset-4">
                <img src="@photoPath" class="img-thumbnail" asp-append-version="true" />
                     </div>

                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
                @section Scripts {
                    <script>
                        $(document).ready(function () {
                            $('.custom-file-input').on("change", function () {
                                var fileName = $(this).val().split("\\").pop();
                                $(this).next('.custom-file-label').html(fileName);
                            });
                        });
                    </script>
                    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                }
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-controller="Teachers" asp-action="Index">Back to List</a>
</div>
